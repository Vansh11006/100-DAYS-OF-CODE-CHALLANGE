
//Q27: Write a program to print the sum of the first n odd numbers.
#include<stdio.h>
int main(){
    int a,sum=0 ;
    printf("Enter the number upto which you want to print the sum :");
    scanf("%d",&a);
    for(int i ;i<=a;i++){
sum+=i;
    }
    printf("The sum of the first %d natural number is :%d",a,sum);
    return 0 ; 
}



// Q28: Write a program to print the product of even numbers from 1 to n.
#include<stdio.h>
int main(){
    int number;
    long long product =1;
    printf("Enter the number upto which you want the product of even number :");
    scanf("%d",&number);
    for(int i = 1;i<=number ;i++){
        if(i%2==0){
            product *= i;
        }
    }
    printf("Product of all even numbers upto %d :%lld",number,product);
    return 0 ; 
}
